<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=visibility"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=add"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <main>
      <h1><%= title %></h1>
      <div class="welcome-container">
        <h4 class="welcome-remarks" aria-label="Mysterious Welcome">
          Welcome to the Global Freedom Wall – a place where you’re invited to
          share your thoughts and ideas openly.
        </h4>
      </div>
      <a href="/create" class="add-entry"> Add Entry </a>
      <details>
        <summary>Search</summary>
        <form action="/search" method="GET">
          <label for="messageText">Message: </label>
          <textarea
            id="messageText"
            name="messageText"
            type="text"
            cols="33"
            rows="10"
            style="resize: vertical"
          ></textarea>
          <label for="messageUser">Alias: </label>
          <input id="messageUser" name="messageUser" type="text" />
          <label for="added">Date Added: </label>
          <input type="date" name="added" id="added" />
          <button type="submit">Search</button>
        </form>
      </details>

      <div class="message-container">
        <% if (locals.messages) {%> <% messages.forEach(message => {%>
        <div class="message-card">
          <div class="message-card-header">
            <span class="message-user">«<%= message.messageUser %>»</span>
            <a href="/<%= message.id %>" class="view-button">
              <span class="material-symbols-outlined"> visibility </span>
            </a>
          </div>
          <div class="message-card-body">
            <p class="message-text" aria-label="Secret message">
              <%= message.messageText %>
            </p>
          </div>
          <p class="message-date">Entry Submitted at: <%= message.added %></p>
        </div>
        <%})%> <%}%>
      </div>
    </main>
    <%- include('footer') %>
  </body>
</html>
